<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Mini Whatsapp</title>
    <link rel="stylesheet" href="style.css" />
  </head>
  <body>
    <h1>All Chats</h3>
    <form method="get" action="/chats/new">
      <button class="btn">New Chat</button>
    </form>
    <br>
    <% for(let chat of chats){%>
    <div class="chat">
      <p>From :<%= chat.from%></p>
      <div class="msg">
        <p>Message :<%= chat.msg%></p>
        <form method="GET" action="/chats/<%=chat._id%>/edit">
          <button class="btn">Edit</button>
        </form>
      </div>
      <p>Received By :<%= chat.to%></p>
      <p>Date: <%= chat.createdAt.toString().split(" ").slice(0,4).join("-")%></p>
      <p>Time: <%= chat.createdAt.toString().split(" ")[4]%></p>
      <br>
      <form method="post" action="/chats/<%=chat._id%>?_method=DELETE">
        <button class="btn">Delete Chat</button>
      </form>
    </div>
    <%}%>
  </body>
</html>
